<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/cativoBackground">
    <ProgressBar
        android:id="@+id/progressBar_search_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/show_details_watchedPBLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Watch Progress:"
            android:textSize="6pt"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <ProgressBar
                android:id="@+id/show_details_watchedProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:progress="80"
                android:max="100"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/custom_progress"
                />
            <TextView
                android:id="@+id/show_details_watchedPercentage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="80%"
                android:textSize="7pt"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/show_details_ScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/show_details_watchedPBLayout"
        android:background="@android:color/black"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/search_result_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/show_details_serieName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:text="The Big Bang Theory"
                    android:textSize="12pt"
                    android:textStyle="bold"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="40dp">

                    <ImageButton
                        android:id="@+id/show_details_favimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/black"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_filled_white"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/show_details_img_back"
                        android:layout_width="149dp"
                        android:layout_height="205dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@android:color/white"
                        android:scaleType="fitXY"
                        />

                    <ImageView
                        android:id="@+id/show_details_img"
                        android:layout_width="144dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/the_big_bang_theory"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CBS"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unitade States"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premiered: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_premiered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24/09/2007"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comedy"
                            android:textStyle="italic"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Language: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seasons: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_seasonsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Running"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/show_details_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.3 / 10"
                            android:textStyle="italic"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Official Site:"
                        android:textSize="6pt"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/show_details_officialSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="http://www.cbs.com/shows/big_bang_theory/"
                        android:autoLink="web"
                        android:textSize="6pt"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|left"
                android:text="Summary:"
                android:textSize="6pt"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/show_details_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'The Big Bang Theory' is a comedy about brilliant physicists, Leonard and Sheldon, who are the kind of beautiful minds that understand how the universe works. But none of that genius helps them interact with people, especially women. All this begins to change when a free-spirited beauty named Penny moves in next door. Sheldon, Leonard's roommate, is quite content spending his nights playing Klingon Boggle with their socially dysfunctional friends, fellow Cal Tech scientists Wolowitz and Koothrappali. However, Leonard sees in Penny a whole new universe of possibilities... including love."
                android:textSize="6pt"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|left"
                android:text="Seasons:"
                android:textSize="6pt"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/show_details_seasonsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="5dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>