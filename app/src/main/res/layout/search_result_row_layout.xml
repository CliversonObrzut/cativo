<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:id="@+id/search_result_relativeLayout"
        >
        <View
            android:id="@+id/search_result_img_back"
            android:layout_width="70dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:background="@color/cativoColorGreen"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/search_result_img"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="7.5dp"
            android:src="@drawable/the_big_bang_theory"
            />
        <ImageButton
            android:id="@+id/search_result_favimg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:background="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:focusableInTouchMode="true"
            android:src="@drawable/star_filled_white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            android:layout_toRightOf="@id/search_result_img"
            android:layout_toLeftOf="@id/search_result_favimg"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/search_result_serieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textStyle="bold"
                android:text="The Big Bang Theory"
                />

            <TextView
                android:id="@+id/search_result_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:text="Rating: 8.3"
                android:textStyle="italic"
                android:layout_marginTop="3dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/search_result_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="6pt"
                    android:text="Korea, Republic of"
                    />
                <TextView
                    android:id="@+id/search_result_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textSize="6pt"
                    android:text="In Development"
                    />
                <TextView
                    android:id="@+id/search_result_serieId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>